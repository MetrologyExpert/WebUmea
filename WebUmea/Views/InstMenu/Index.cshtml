@model IEnumerable<WebUmea.Models.Instrument>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />

@using (Html.BeginForm("New", "InstMenu"))
{
    <button type="submit" class="btn btn-primary"> Add New  </button>

}
<br />
<br />

<table class="table table-hover">
    <tr>
        <th>InstrumentName</th>
        <th>Instrument Model</th>
        <th>Description</th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@Html.ActionLink(item.InstrumentName, "Details", new { id = item.InstrumentId })</td>
            <td>@item.InstrumentId</td>
            <td>@item.InstrumentName</td>
        </tr>
    }
</table>





